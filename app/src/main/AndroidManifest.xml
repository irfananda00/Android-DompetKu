<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="garputala.irfananda.dompetku" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".InputTransactionActivity"
            android:label="@string/title_activity_transaction"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditTransactionActivity"
            android:label="@string/title_activity_edit_transaction"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".InputAccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditAccountActivity"
            android:label="@string/title_activity_edit_account"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ListCategoryActivity"
            android:label="@string/title_activity_list_category"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".InputCategoryActivity"
            android:label="@string/title_activity_input_category"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditCategoryActivity"
            android:label="@string/title_activity_edit_category"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
