<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/app_bar_settings"
    tools:context="garputala.irfananda.dompetku.SettingsActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Category"
        android:id="@+id/btn_category_account"
        android:background="#f9f9f9"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:gravity="left|center_vertical"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Category"
        android:id="@+id/btn_category_transaction"
        android:background="#f9f9f9"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/btn_category_account"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:id="@+id/btn_clear_data"
        android:background="#f9f9f9"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/btn_category_transaction"/>

</RelativeLayout>