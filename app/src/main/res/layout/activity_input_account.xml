<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_input_account"
    tools:context="garputala.irfananda.dompetku.InputAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_above="@+id/btn_add"
        android:layout_alignParentTop="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_account_name"
        android:hint="Account Name"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/img_icon_account_name"
        android:layout_toEndOf="@+id/img_icon_account_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Value"
        android:id="@+id/edt_value"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/edt_account_name"
        android:layout_alignLeft="@+id/edt_account_name"
        android:layout_alignStart="@+id/edt_account_name" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:id="@+id/btn_select_category"
            android:layout_gravity="center_horizontal"
            android:background="#f9f9f9"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:layout_below="@id/edt_value"
            android:layout_alignLeft="@+id/edt_value"
            android:layout_alignStart="@+id/edt_value" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:id="@+id/img_icon_account_name"
            android:src="@drawable/piggy9"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_icon_value"
            android:src="@drawable/coins4"
            android:layout_below="@+id/edt_account_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_icon_category"
            android:src="@drawable/pie51"
            android:layout_below="@+id/edt_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />
</RelativeLayout>
